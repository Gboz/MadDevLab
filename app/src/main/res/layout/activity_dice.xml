<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.gboz.maddevlab.trials.DiceActivity">

    <Button
        android:id="@+id/btn_cube_one_first_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="64dp"
        android:text="x"
        app:layout_constraintBottom_toTopOf="@+id/btn_cube_two_first_player"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cube_two_first_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="96dp"
        android:text="x"
        app:layout_constraintBottom_toTopOf="@+id/btn_cube_three_first_player"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cube_three_first_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="128dp"
        android:layout_marginStart="128dp"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cube_four_first_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="96dp"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cube_three_first_player" />

    <Button
        android:id="@+id/btn_cube_five_first_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="1dp"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cube_four_first_player" />

    <Button
        android:id="@+id/btn_cube_one_second_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:text="x"
        app:layout_constraintEnd_toStartOf="@+id/btn_cube_two_second_player"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cube_two_second_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="96dp"
        android:text="x"
        app:layout_constraintEnd_toStartOf="@+id/btn_cube_three_second_player"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cube_three_second_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="128dp"
        android:layout_marginTop="128dp"
        android:text="x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cube_four_second_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="96dp"
        android:text="x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cube_three_second_player" />

    <Button
        android:id="@+id/btn_cube_five_second_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="64dp"
        android:text="x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cube_four_second_player" />

    <Button
        android:id="@+id/btn_roll_first_player"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginBottom="96dp"
        android:layout_marginStart="128dp"
        android:text="rzut"
        app:layout_constraintBottom_toTopOf="@+id/btn_cube_five_first_player"
        app:layout_constraintStart_toEndOf="@+id/btn_cube_one_first_player" />

    <Button
        android:id="@+id/btn_pass_first_player"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="128dp"
        android:text="pass"
        app:layout_constraintBottom_toTopOf="@+id/btn_roll_first_player"
        app:layout_constraintStart_toEndOf="@+id/btn_cube_one_first_player" />

    <Button
        android:id="@+id/btn_roll_second_player"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginEnd="128dp"
        android:layout_marginTop="96dp"
        android:text="rzut"
        app:layout_constraintEnd_toStartOf="@+id/btn_cube_five_second_player"
        app:layout_constraintTop_toBottomOf="@+id/btn_cube_one_second_player" />

    <Button
        android:id="@+id/btn_pass_second_player"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginEnd="128dp"
        android:text="pass"
        app:layout_constraintEnd_toStartOf="@+id/btn_cube_five_second_player"
        app:layout_constraintTop_toBottomOf="@+id/btn_roll_second_player" />
</android.support.constraint.ConstraintLayout>
